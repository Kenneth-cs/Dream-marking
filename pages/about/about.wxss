/* about.wxss */
page {
  height: 100vh;
  background: #000000;
  color: #ffffff;
}

.scrollarea {
  height: 100vh;
}

.about-container {
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.about-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: linear-gradient(135deg, rgba(123, 67, 151, 0.1), rgba(220, 36, 48, 0.1));
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.about-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.about-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #7B4397, #DC2430);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.about-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.about-section {
  margin-bottom: 48rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #ffffff;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: linear-gradient(135deg, #7B4397, #DC2430);
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.contact-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.8;
}

.about-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  margin-top: 40rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.version-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 32rpx;
}

.back-button {
  width: 400rpx !important;
  height: 88rpx !important;
  background: linear-gradient(135deg, #7B4397, #DC2430) !important;
  color: #fff !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border-radius: 44rpx !important;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
  line-height: 1 !important;
}

.back-button::after {
  border: none;
}
