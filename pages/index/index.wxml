<!--index.wxml-->
<navigation-bar title="即时造梦" back="{{false}}" color="black" background="#FFF"></navigation-bar>

<!-- 初始化loading -->
<view wx:if="{{isInitializing}}" class="loading-container">
  <view class="loading-text">正在火速打开中，请稍等...</view>
</view>

<!-- 主界面内容 -->
<scroll-view wx:else class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 图片预览区域 -->
    <view class="image-container">
      <image 
        class="preview-image" 
        src="{{imageUrl || placeholderImage}}"
        mode="aspectFill"
        bindtap="previewImage"
        bindlongpress="saveImage"
      ></image>
      <!-- AI回复显示区域 -->
      <scroll-view 
        scroll-y 
        class="response-area"
        wx:if="{{!isRandomMode && showResponse}}"
      >
        <view class="wenan-container">
          <text class="wenan-text">{{wenan}}</text>
        </view>
      </scroll-view>
    </view>
    
    <!-- 文本输入区域 -->
    <view class="input-container" wx:if="{{showInput}}">
      <textarea 
        class="prompt-input"
        placeholder="请输入你想生成的图片..."
        value="{{prompt}}"
        bindinput="onInputChange"
      ></textarea>
    </view>
    
    <!-- 生成按钮 -->
    <view class="button-container">
      <button 
        class="generate-button" 
        bindtap="onGenerateImage"
        loading="{{isLoading}}"
      >{{isRandomMode ? '点击随机抽取卡片' : '生成图片'}}</button>
    </view>

    <!-- 使用提示 -->
    <view class="tips-container">
      <view class="tips-title">💡 使用提示</view>
      <view class="tips-item">• 点击图片可预览，长按可保存到相册</view>
      <view class="tips-item">• 输入详细的描述，生成效果更好</view>
      <view class="tips-item">• 每次生成需要等待几秒钟</view>
    </view>

    <!-- 功能说明区域 - 为智能广告提供更多内容区块 -->
    <view class="feature-section">
      <view class="feature-title">功能特色</view>
      <view class="feature-list">
        <view class="feature-card">
          <text class="feature-icon">✨</text>
          <text class="feature-name">智能生成</text>
          <text class="feature-desc">描述你的想法，即梦为你创造</text>
        </view>
        <view class="feature-card">
          <text class="feature-icon">🎴</text>
          <text class="feature-name">随机抽卡</text>
          <text class="feature-desc">每次都是惊喜</text>
        </view>
        <view class="feature-card">
          <text class="feature-icon">💾</text>
          <text class="feature-name">一键保存</text>
          <text class="feature-desc">轻松保存到相册</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
